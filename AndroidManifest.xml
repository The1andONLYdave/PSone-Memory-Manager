<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.topherlee.psonememorymanager"
    android:installLocation="auto"
    android:versionCode="02162015"
    android:versionName="1.4.4" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- <uses-permission android:name="android.permission.INTERNET" /> -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name="com.topherlee.psonememorymanager.MCTabsWidget"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.topherlee.psonememorymanager.Card1Activity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.topherlee.psonememorymanager.Card2Activity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.topherlee.psonememorymanager.FileBrowser"
            android:icon="@drawable/ic_action_collection"
            android:label="@string/file_browser"
            android:parentActivityName="com.topherlee.psonememorymanager.MCTabsWidget"
            android:screenOrientation="landscape" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.topherlee.psonememorymanager.MCTabsWidget" />
        </activity>
        <activity
            android:name="com.topherlee.psonememorymanager.MCViewActivity"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action
                    android:name="com.topherlee.psonememorymanager.COPYMC"
                    android:screenOrientation="landscape" >
                </action>
            </intent-filter>
        </activity>
        <activity
            android:name="com.topherlee.psonememorymanager.MCViewActivityTab2"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.topherlee.psonememorymanager.Prefs"
            android:icon="@drawable/ic_action_settings"
            android:label="@string/settings"
            android:parentActivityName="com.topherlee.psonememorymanager.MCTabsWidget"
            android:screenOrientation="landscape" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.topherlee.psonememorymanager.MCTabsWidget" />
        </activity>
        <activity
            android:name="com.topherlee.psonememorymanager.EditHeader"
            android:parentActivityName="com.topherlee.psonememorymanager.MCTabsWidget"
            android:screenOrientation="landscape" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.topherlee.psonememorymanager.MCTabsWidget" />
        </activity>
    </application>

</manifest>
