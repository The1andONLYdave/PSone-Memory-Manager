<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.topherlee.psonememorymanager"
    android:versionCode="082014"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/memcard"
        android:label="@string/app_name" >
        <activity
            android:name="com.topherlee.psonememorymanager.MCTabsWidget"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.topherlee.psonememorymanager.Card1Activity"
            android:label="@string/app_name" />
        <activity
            android:name="com.topherlee.psonememorymanager.Card2Activity"
            android:label="@string/app_name" />
        <activity
            android:name="com.topherlee.psonememorymanager.FileBrowser"
            android:label="@string/app_name" />
        <activity
            android:name="com.topherlee.psonememorymanager.MCViewActivity" >
            <intent-filter>
                <action android:name="com.tutorials.hellotabwidget.COPYMC" >
                </action>
            </intent-filter>
        </activity>
        <activity
            android:name="com.topherlee.psonememorymanager.MCViewActivityTab2" />
        <activity
            android:name="com.topherlee.psonememorymanager.Prefs" />
        <activity
            android:name="com.topherlee.psonememorymanager.EditHeader" />
    </application>

</manifest>